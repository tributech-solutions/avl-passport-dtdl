{
    "@context": "dtmi:dtdl:context;3",
    "@id": "dtmi:avl:passport:ui:dataview;1",
    "@type": "Interface",
    "displayName": "Dataview",
    "contents": [
        {
            "@type": "Property",
            "name": "Name",
            "schema": "string",
            "writable": false,
            "displayName": "Name",
            "description": "Represents the name of the Data View."
        },
        {
            "@type": "Property",
            "name": "Visibility",
            "schema": {
                "@type": "Enum",
                "valueSchema": "integer",
                "enumValues": [
                    {
                        "name": "None",
                        "enumValue": 0,
                        "displayName": "None",
                        "description": "Attribute should not be displayed."
                    },
                    {
                        "name": "Configuration",
                        "enumValue": 1,
                        "displayName": "Configuration",
                        "description": "Configuration should be visible during the creation."
                    },
                    {
                        "name": "Private",
                        "enumValue": 2,
                        "displayName": "Private",
                        "description": "Attribute should only be visible for authenticated users."
                    },
                    {
                        "name": "Public",
                        "enumValue": 3,
                        "displayName": "Public",
                        "description": "Attribute should be visible for all users."
                    }
                ]
            },
            "writable": false,
            "displayName": "Visibility",
            "description": "Defines if and where the Attribute should be displayed."
        },
        {
            "@type": "Relationship",
            "name": "DataViewCategories",
            "minMultiplicity": 0,
            "maxMultiplicity": 100,
            "target": "dtmi:avl:passport:ui:category;1",
            "displayName": "Data View Categories",
            "description": "Contains all categories which should be displayed on the ui for a specific Product Model / Product Unit."
        }      
    ]
  }